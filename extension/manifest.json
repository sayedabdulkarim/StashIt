{
  "manifest_version": 3,
  "name": "StashIt",
  "version": "1.0.0",
  "description": "Your personal secure vault for passwords, documents & more",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "alarms"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.stashit.app/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "oauth2": {
    "client_id": "686284037711-bb9hims44n0uka979i7ptgm1j6s6f4de.apps.googleusercontent.com",
    "scopes": ["email", "profile"]
  }
}
